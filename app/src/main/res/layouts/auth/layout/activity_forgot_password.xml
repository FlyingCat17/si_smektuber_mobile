<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="22dp"
    android:paddingLeft="22dp"
    tools:context=".screen.auth.ForgotPassword">
    <include
        android:id="@+id/backIcon"
        layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleForgotPw"
        android:textSize="35sp"
        android:textColor="@color/cyanblue"
        android:fontFamily="@font/urbanist_bold"
        android:layout_below="@+id/backIcon"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvDescTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:text="@string/tvDescForgotPw"
        android:fontFamily="@font/urbanist"
        android:textSize="18sp"
        android:textColor="@color/greyVariant"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tvDescTitle">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/hintEmail"
            android:id="@+id/etLayoutEmail"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:id="@+id/et_email"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/urbanist"
                android:textSize="17sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <include
            android:id="@+id/btnSendEmail"
            layout="@layout/button"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="40dp" />
    </LinearLayout>
</RelativeLayout>