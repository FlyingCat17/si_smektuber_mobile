<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.auth.WelcomeAuth">
    <LinearLayout
        android:id="@+id/logoWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="58dp"
            android:layout_height="54dp"
            android:src="@drawable/logosmektuber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleApp"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgwelcome"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:foregroundGravity="center"
        android:src="@drawable/welcome_img"
        android:layout_below="@+id/logoWelcome"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imgwelcome"
        android:layout_marginTop="43dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToLogin"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/btnLogin"
            android:fontFamily="@font/urbanist_medium"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue01"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            />
<!--        android:layout_height="60dp"-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToRegister"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/btnRegister"
            android:textSize="15sp"
            android:fontFamily="@font/urbanist_medium"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            android:textColor="@color/cyanblue"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/cyanblue"
            />


    </LinearLayout>
</RelativeLayout>