<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    tools:context=".screen.auth.ResetPassword">
    <include
        android:id="@+id/backIcon"
        layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_below="@+id/backIcon"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetPasswordFragment"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_below="@+id/backIcon"
        android:id="@+id/resetPasswordRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleNewPassword"
            android:textSize="35sp"
            android:textColor="@color/cyanblue"
            android:fontFamily="@font/urbanist_bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tvDescTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/title"
            android:text="@string/tvDescNewPw"
            android:fontFamily="@font/urbanist"
            android:textSize="19sp"
            android:textColor="@color/greyVariant"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_below="@+id/tvDescTitle"
            android:layout_marginBottom="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintNewPassword"
                android:layout_marginTop="30dp"
                app:endIconMode="password_toggle">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:id="@+id/et_password"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="17sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutPasswordConfirm"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintNewPasswordConfirm"
                android:layout_marginTop="30dp"
                app:endIconMode="password_toggle">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:id="@+id/et_passwordConfirm"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="17sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <include
                android:id="@+id/btnSendResetPw"
                layout="@layout/button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="40dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>