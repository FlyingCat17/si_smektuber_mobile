<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageFasilitasJurusan"
            android:layout_width="170dp"
            android:layout_height="111.92dp"
            android:background="@drawable/rectangle_fasilitas"
            android:src="@drawable/imagenoarticle"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:id="@+id/DataTextFasilitasJurusan"
            android:layout_width="170dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="9dp"
            android:text="Artikel Artikel ini sangat keren jadi ini sebenarnya jangan lupa"
            android:textAppearance="@style/artikel_ini"
            android:lineSpacingExtra="2sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>