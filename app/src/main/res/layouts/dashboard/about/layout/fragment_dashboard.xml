<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.home.dashboard.Dashboard"
    >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/blue01">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="38.51dp"
                                    android:layout_height="45.53dp"
                                    android:id="@+id/IconPesan"
                                    android:layout_marginTop="38dp"
                                    android:layout_marginEnd="22.49dp"
                                    android:layout_marginBottom="20.47dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/iconpesan"
                                    />

                                <TextView
                                    android:id="@+id/Hai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="27dp"
                                    android:layout_marginStart="28dp"
                                    android:text="Hai,"
                                    android:fontFamily="@font/urbanistsemibold"
                                    android:textSize="19sp"
                                    android:textColor="@color/white"
                                    app:layout_constraintBottom_toBottomOf="@+id/IconPesan"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/IconPesan"
                                    />

                                <TextView
                                    android:id="@+id/Fullname"
                                    android:layout_width="240dp"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="63dp"
                                    android:text="@string/Fullname"
                                    android:fontFamily="@font/urbanistsemibold"
                                    android:textSize="19sp"
                                    android:textColor="@color/white"
                                    app:layout_constraintBottom_toBottomOf="@+id/IconPesan"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/IconPesan"
                                    />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/linearlayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/background_home">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="133dp"
                                    android:background="@drawable/ractangle_address"
                                    android:layout_marginLeft="22dp"
                                    android:layout_marginRight="22dp"
                                    android:layout_marginTop="28dp">

                                        <TextView
                                            android:id="@+id/TitleSistemInformasi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="36dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginStart="20dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="20dp"
                                            android:textAppearance="@style/sistem_info"
                                            android:text="@string/titleHome"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            />

                                        <TextView
                                            android:id="@+id/ButtonSelengkapnya"
                                            android:layout_width="wrap_content"
                                            android:layout_height="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            android:layout_marginLeft="20dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="60dp"
                                            android:text="@string/selengkapny"
                                            android:textAppearance="@style/selengkapny"
                                            />

                                        <TextView
                                            android:id="@+id/some_id"
                                            android:layout_width="12dp"
                                            android:layout_height="30dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginLeft="115dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="55dp"
                                            android:text=">"
                                            android:textAppearance="@style/Arrow"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            />

                                        <TextView
                                            android:id="@+id/jl_pb_sudir"
                                            android:layout_width="288dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="85dp"
                                            android:lineSpacingExtra="2sp"
                                            android:text="@string/jl_pb_sudir"
                                            android:textAppearance="@style/jl_pb_sudir"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <ImageView
                                            android:id="@+id/logo_smk_7_"
                                            android:layout_width="56dp"
                                            android:layout_height="51.9dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginTop="20dp"
                                            android:layout_marginEnd="23dp"
                                            android:background="@drawable/logosmektuber"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/Visi_Misi"
                                            android:layout_width="151dp"
                                            android:layout_height="101dp"
                                            android:background="@drawable/rectangle_menu"
                                            android:backgroundTint="@color/Color312E48"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginLeft="22dp"
                                            android:layout_marginTop="24dp"
                                            android:clickable="true"
                                            android:focusable="true">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="14dp"
                                                    android:layout_marginStart="14dp"
                                                    android:background="@drawable/iconstar"/>

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="14dp"
                                                    android:layout_marginTop="38dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:text="Visi &amp; Misi"
                                                    android:textAppearance="@style/TitleMenuHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="28dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="56dp"
                                                    android:layout_marginStart="14dp"
                                                    android:text="@string/visi_misi_s"
                                                    android:textAppearance="@style/DetailTitleHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/Extrakurikuler"
                                            android:layout_width="151dp"
                                            android:layout_height="101dp"
                                            android:background="@drawable/rectangle_menu"
                                            android:backgroundTint="@color/ColorFC313D"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginRight="22dp"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:layout_marginTop="24dp">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="14dp"
                                                    android:layout_marginStart="14dp"
                                                    android:background="@drawable/iconsoccer"/>

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="14dp"
                                                    android:layout_marginTop="38dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:text="@string/extrakuriku"
                                                    android:textAppearance="@style/TitleMenuHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="28dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="56dp"
                                                    android:layout_marginStart="14dp"
                                                    android:text="@string/profil_kegi"
                                                    android:textAppearance="@style/DetailTitleHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/Jurusan"
                                            android:layout_width="151dp"
                                            android:layout_height="101dp"
                                            android:background="@drawable/rectangle_menu"
                                            android:backgroundTint="@color/Color05D77F"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginLeft="22dp"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:layout_marginTop="14dp">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="14dp"
                                                    android:layout_marginStart="14dp"
                                                    android:background="@drawable/iconjurusan"/>

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="14dp"
                                                    android:layout_marginTop="38dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:text="@string/jurusan"
                                                    android:textAppearance="@style/TitleMenuHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="28dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="56dp"
                                                    android:layout_marginStart="14dp"
                                                    android:text="@string/informasi_p"
                                                    android:textAppearance="@style/DetailTitleHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:id="@+id/Map_Lokasi"
                                            android:layout_width="151dp"
                                            android:layout_height="101dp"
                                            android:background="@drawable/rectangle_menu"
                                            android:backgroundTint="@color/ColorFFC22E"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginRight="22dp"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:layout_marginTop="14dp">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="14dp"
                                                    android:layout_marginStart="14dp"
                                                    android:background="@drawable/iconmaps"/>

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="14dp"
                                                    android:layout_marginTop="38dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:text="@string/map_lokasi"
                                                    android:textAppearance="@style/TitleMenuHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="28dp"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginTop="56dp"
                                                    android:layout_marginStart="14dp"
                                                    android:text="@string/preview_lok"
                                                    android:textAppearance="@style/DetailTitleHome"
                                                    android:lineSpacingExtra="2sp"
                                                    android:gravity="center_vertical"
                                                    />
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                        
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                        <RelativeLayout
                                            android:id="@+id/idll"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:visibility="invisible"
                                            >
                                                <TextView
                                                    android:id="@+id/TitleArtikel"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentLeft="true"
                                                    android:layout_marginLeft="27dp"
                                                    android:layout_alignParentTop="true"
                                                    android:layout_marginTop="16dp"
                                                    android:text="@string/artikel"
                                                    android:textAppearance="@style/artikel"
                                                    android:lineSpacingExtra="-2sp"
                                                    android:gravity="center_vertical"
                                                    />

                                                <TextView
                                                    android:id="@+id/Titlelihat_semua"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_marginRight="22dp"
                                                    android:clickable="true"
                                                    android:layout_alignParentTop="true"
                                                    android:layout_marginTop="20dp"
                                                    android:text="@string/lihat_semua"
                                                    android:textAppearance="@style/lihat_semua"
                                                    android:lineSpacingExtra="-1sp"
                                                    android:gravity="center_vertical"
                                                    />
                                        </RelativeLayout>

                                                <RelativeLayout
                                                    android:id="@+id/ItemArtikel"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="49dp"
                                                    android:orientation="horizontal">

                                                        <androidx.recyclerview.widget.RecyclerView
                                                            android:id="@+id/rvData"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:paddingBottom="20dp"
                                                            android:visibility="invisible"
                                                            />

                                                        <com.facebook.shimmer.ShimmerFrameLayout
                                                            android:id="@+id/rvDataShimmer"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content">
                                                                <LinearLayout
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:orientation="horizontal"
                                                                    >
                                                                        <include layout="@layout/item_data_shimmer"/>
                                                                        <include layout="@layout/item_data_shimmer"/>
                                                                </LinearLayout>
                                                        </com.facebook.shimmer.ShimmerFrameLayout>

                                                </RelativeLayout>

                                </RelativeLayout>

                        </LinearLayout>

                </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>