<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadiusTopRight="15dp"
                    app:cardCornerRadiusTopLeft="15dp"
                    app:cardCornerRadiusBottomRight="15dp"
                    app:cardBackgroundColor="@color/blue01"
                    android:layout_width="217dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="122dp">

                        <ImageView
                            android:id="@+id/ImageArtikel"
                            android:layout_width="217dp"
                            android:layout_height="122dp"
                            android:background="@drawable/rectangle_artikel"
                            android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>
            

                <TextView
                    android:id="@+id/DataTextArtikel"
                    android:layout_width="217dp"
                    android:layout_height="34dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="22dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:text="Artikel Artikel ini sangat keren jadi ini sebenarnya jangan lupa"
                    android:textAppearance="@style/artikel_ini"
                    android:lineSpacingExtra="2sp"
                    android:gravity="center_vertical"
                    />

        </LinearLayout>

</LinearLayout>