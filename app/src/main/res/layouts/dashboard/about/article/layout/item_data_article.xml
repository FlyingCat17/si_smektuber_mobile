<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_item_data_jobs2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageArtikel"
            android:layout_width="191dp"
            android:layout_height="122dp"
            android:background="@drawable/rectangle_item_data_jobs1"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/DataTextArtikel"
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="206dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="0dp"
            android:lineSpacingExtra="2sp"
            android:text="Artikel Artikel ini sangat keren jadi ini sebenarnya jangan lupa"
            android:textAppearance="@style/artikel_jobs" />

    </RelativeLayout>

</LinearLayout>