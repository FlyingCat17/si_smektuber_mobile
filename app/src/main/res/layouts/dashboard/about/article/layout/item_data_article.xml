<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_item_data_jobs2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="@color/blue01"
            app:cardCornerRadius="15dp"
            android:layout_height="121dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17.64dp"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/DataTextArtikelViewAll"
                android:layout_width="wrap_content"
                android:layout_height="121dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="206dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="0dp"
                android:lineSpacingExtra="2sp"
                android:text="Artikel Artikel ini sangat keren jadi ini sebenarnya jangan lupa"
                android:textAppearance="@style/artikel_" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ImageArtikelCard"
                android:layout_width="191dp"
                android:layout_height="122dp"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/ImageArtikelViewAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/imageartikel"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</LinearLayout>