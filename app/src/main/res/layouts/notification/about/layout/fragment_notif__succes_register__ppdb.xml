<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.notification.Notif_Fail_Login_Password"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:background="@color/white"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/successmark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        android:clipToOutline="true"
        android:background="@drawable/icon_success"
        />
<!-- Izin ubah :   android:layout_width="255dp"-->
    <TextView
        android:id="@+id/gagal_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="374dp"
        android:text="@string/anda_telah_terdaftar"
        android:textAppearance="@style/gagal_masuk"
        android:gravity="center_horizontal|top"
        />

    <TextView
        android:layout_below="@id/gagal_masuk"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="413dp"
        android:text="@string/data_anda_t"
        android:textAppearance="@style/pastikan_ka"
        android:lineSpacingExtra="4sp"
        android:translationY="-2.25sp"
        android:gravity="center_horizontal|top"
        />

    <include
        android:id="@+id/BtnSuccesRegisterPPDB"
        layout="@layout/button_kembali_ke_beranda"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"/>


</RelativeLayout>