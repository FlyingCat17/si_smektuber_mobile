<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.home.Notif_Fail_Login_Password"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/successmark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        android:clipToOutline="true"
        android:background="@drawable/icon_fail"
        />

    <TextView
        android:id="@+id/gagal_masuk"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="102dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="374dp"
        android:text="@string/gagal"
        android:textAppearance="@style/gagal_masuk"
        android:gravity="center_horizontal|top"
        />

    <TextView
        android:layout_width="316dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="413dp"
        android:text="@string/email_anda_"
        android:textAppearance="@style/pastikan_ka"
        android:lineSpacingExtra="4sp"
        android:translationY="-2.25sp"
        android:gravity="center_horizontal|top"
        />

    <include
        android:id="@+id/BtnKembaliFailFindEmail"
        layout="@layout/button_kembali"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"/>


</RelativeLayout>