<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_item_data_jobs2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#ECEDED"
            app:cardCornerRadius="15dp"
            android:layout_height="121dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="206dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2sp"
                android:paddingTop="10dp"
                android:background="@color/grey"
                android:paddingBottom="10dp"
                android:text="Artikel Artikel ini sangat keren jadi ini sebenarnya jangan lupa"
                android:textColor="@color/grey" />
            <TextView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="206dp"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="2sp"
                android:paddingTop="10dp"
                android:background="@color/grey"
                android:paddingBottom="10dp"
                android:text="Artikel Artikel ini sangat keren jadi ini sebenarnya jangan lupa"
                android:textColor="@color/grey" />
            <TextView
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="206dp"
                android:layout_marginTop="70dp"
                android:lineSpacingExtra="2sp"
                android:paddingTop="10dp"
                android:background="@color/grey"
                android:paddingBottom="10dp"
                android:text="Artikel Artikel ini sangat keren jadi ini sebenarnya jangan lupa"
                android:textColor="@color/grey" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ImageArtikelCard"
                android:layout_width="191dp"
                android:layout_height="122dp"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/ImageArtikelViewAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</LinearLayout>