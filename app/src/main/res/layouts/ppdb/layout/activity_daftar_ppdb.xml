<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.home.ppdb.DaftarPPDB">
    <LinearLayout
        android:id="@+id/u"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">
        <include
            android:id="@+id/backIcon"
            layout="@layout/toolbar"/>
    </LinearLayout>

    <FrameLayout
        android:layout_below="@+id/u"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daftarPPDBFragment"
        android:background="@color/white"
        />

    <ScrollView
        android:id="@+id/content"
        android:layout_below="@+id/u"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TitleDaftar"
                    android:layout_width="0dp"
                    android:layout_height="117dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="19dp"
                    android:text="@string/welcome_bac"
                    android:textAppearance="@style/welcome_bac"
                    android:lineSpacingExtra="3sp"
                    android:translationY="-1.5sp"
                    android:gravity="top"
                    />

            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutNisn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/hintNisn"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_NISN"
                    android:inputType="text|number"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/nama_lengka"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_Name_Lengkap"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutPlaceBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/tempat_lahir"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_TempatLahir"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutDateBirth"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/tanggal_lah">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/Dp_Tanggal_Lahir"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/alamat"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_Alamat"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/no_hp"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_no_hp"
                    android:inputType="number"
                    android:maxLength="12"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutFather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/nama_ayah"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_nama_ayah"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutMother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/nama_ibu"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_Nama_Ibu"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutGuardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/nama_wali_o"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_Nama_Wali"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutSchoolOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/asal_sekola"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_Asal_sekolah"
                    android:inputType="text"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutGraduationYear"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="@string/tahun_lulus">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/Dp_tahun_lulus"
                    android:inputType="number"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLength="4"
                    android:fontFamily="@font/urbanist"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutMajor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:hint="@string/jurusan_yan">
                <AutoCompleteTextView
                    android:id="@+id/Dp_Jurusan"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/urbanist"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutMajor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:hint="@string/jurusan_yan2">
                <AutoCompleteTextView
                    android:id="@+id/Dp_Jurusan02"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/urbanist"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <include
                android:id="@+id/BtnDaftarPPDB"
                layout="@layout/button_daftar_siswa"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="65dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"/>
        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
</RelativeLayout>