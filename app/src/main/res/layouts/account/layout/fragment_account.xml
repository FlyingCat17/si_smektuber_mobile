<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.home.Account">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ImageProfil"
        android:layout_width="73.6dp"
        android:layout_height="73.6dp"
        android:layout_marginTop="72.64dp"
        android:layout_marginLeft="32.64dp"
        android:padding="5dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/Color00000"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:background="@drawable/iconuser"
        />

    <TextView
        android:id="@+id/FullnameAccount"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="@string/Fullname"
        android:fontFamily="@font/urbanist"
        android:textSize="18sp"
        android:layout_marginTop="89dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="52dp"
        android:textColor="@color/Color00000"
        />

    <TextView
        android:id="@+id/UsernameAccount"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="@string/Username"
        android:fontFamily="@font/urbanist"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="52dp"
        android:textColor="@color/Color7D7D7D"
        />

    <com.google.android.material.button.MaterialButton xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/ButtonUbahProfil"
        android:fontFamily="@font/urbanist_medium"
        android:textAllCaps="false"
        android:backgroundTint="@color/blue01"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        android:id="@+id/ButtonUbahProfil"
        android:onClick="ButtonUbahProfill"
        android:layout_marginTop="191dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp"
        />

    <com.google.android.material.button.MaterialButton xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/ButtonKeluarAkun"
        android:fontFamily="@font/urbanist_medium"
        android:textAllCaps="false"
        android:backgroundTint="@color/ColorFF3642"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        android:id="@+id/ButtonKeluarAkun"
        android:layout_marginTop="257dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="23dp"
        />


</RelativeLayout>