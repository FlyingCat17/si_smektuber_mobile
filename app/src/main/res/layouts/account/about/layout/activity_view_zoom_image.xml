<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.home.account.ViewZoomImage"
    android:background="@color/Color00000"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto Profil"
        android:textSize="17sp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        >

    </TextView>

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbarZoom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="22sp"
        android:layout_marginTop="56dp"
        android:background="@drawable/bg_rounded_image_zoom_view"
        android:paddingStart="10dp"
        app:navigationIcon="@drawable/back_arrow_white"
        android:paddingEnd="10dp"
        android:paddingRight="10dp">
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="401.89dp"
        android:layout_gravity="center"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="199dp"
        android:layout_marginBottom="199dp">

        <com.jsibbold.zoomage.ZoomageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ImageProfilZoom"
            android:scaleType="fitXY"
            android:background="@drawable/iconuser"
            app:zoomage_restrictBounds="true"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="ALWAYS"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.9"
            app:zoomage_maxScale="8"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>