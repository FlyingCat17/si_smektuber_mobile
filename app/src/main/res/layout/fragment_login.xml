<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSky"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context=".screen.auth.Login">
        <include
            android:id="@+id/backIcon"
            layout="@layout/toolbar"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleLogin"
            android:textSize="35sp"
            android:textColor="@color/cyanblue"
            android:fontFamily="@font/urbanist_bold"
            android:layout_below="@+id/backIcon"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_below="@+id/title"
            android:layout_marginBottom="50dp">
            <include
                android:id="@+id/et_username"
                layout="@layout/edit_text_username"/>
            <include
                android:id="@+id/et_password"
                layout="@layout/edit_text_password"/>


            <TextView
                android:id="@+id/forgotPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/urbanist_bold"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:text="@string/titleForgotPw"/>

            <include
                android:id="@+id/btn_login"
                layout="@layout/btn_primary_login"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak punya akun? "
            android:textSize="15sp"
            android:fontFamily="@font/urbanist"
            android:textColor="@color/cyanblue"/>
        <TextView
            android:id="@+id/txtToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="Daftar Sekarang"
            android:textSize="15sp"
            android:fontFamily="@font/urbanist_bold"
            android:textColor="@color/blue03"/>
    </LinearLayout>


</RelativeLayout>