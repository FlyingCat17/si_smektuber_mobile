<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSky"
    tools:context=".screen.auth.Register">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="20dp"
       android:paddingRight="25dp"
       android:paddingLeft="25dp">

      <include
          android:id="@+id/backIcon"
          layout="@layout/toolbar"/>
      <TextView
          android:id="@+id/title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/titleRegister"
          android:textSize="35sp"
          android:textColor="@color/cyanblue"
          android:fontFamily="@font/urbanist_bold"
          android:layout_below="@+id/backIcon"
          android:layout_marginTop="20dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="vertical"
          android:id="@+id/formInput"
          android:layout_below="@+id/title">
         <include
             android:id="@+id/et_username"
             layout="@layout/edit_text_username"/>
         <include
            android:id="@+id/et_name"
            layout="@layout/edit_text_name"/>
         <include
            android:id="@+id/et_email"
            layout="@layout/edit_text_email"/>
         <include
            android:id="@+id/et_password"
            layout="@layout/edit_text_password"/>
         <include
            android:id="@+id/btn_register"
            layout="@layout/btn_primary_register"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/formInput"
          android:layout_marginTop="45dp"
          android:orientation="horizontal"
          android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentLeft="true"
          android:gravity="center"
          android:layout_marginBottom="15dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Sudah Memiliki akun? "
             android:textSize="15sp"
             android:fontFamily="@font/urbanist"
             android:textColor="@color/cyanblue"/>
         <TextView
             android:id="@+id/txtToLogin"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="3dp"
             android:text="Masuk Sekarang"
             android:textSize="15sp"
             android:fontFamily="@font/urbanist_bold"
             android:textColor="@color/blue03"/>
      </LinearLayout>



   </RelativeLayout>
</androidx.core.widget.NestedScrollView>