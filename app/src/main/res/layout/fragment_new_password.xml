<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".screen.auth.NewPassword">

    <include
        android:id="@+id/backIcon"
        layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleNewPassword"
        android:textSize="35sp"
        android:textColor="@color/cyanblue"
        android:fontFamily="@font/urbanist_bold"
        android:layout_below="@+id/backIcon"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvDescTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:text="@string/tvDescNewPw"
        android:fontFamily="@font/urbanist"
        android:textSize="19sp"
        android:textColor="@color/greyVariant"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/tvDescTitle"
        android:layout_marginBottom="50dp">
        <include
            android:id="@+id/et_newPassword"
            layout="@layout/edit_text_new_password"/>
        <include
            android:id="@+id/et_newPasswordConfirm"
            layout="@layout/edit_text_new_password_confirm"/>

        <include
            android:id="@+id/btn_login"
            layout="@layout/btn_primary_register"/>
    </LinearLayout>

</RelativeLayout>