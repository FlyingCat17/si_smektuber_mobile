<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSky"
    tools:context=".screen.auth.Welcome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteSky">
        <LinearLayout
            android:id="@+id/logoWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/logosmektuber"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleApp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgwelcome"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:foregroundGravity="center"
            android:src="@drawable/welcome_img"
            android:layout_below="@+id/logoWelcome"/>

        <LinearLayout
            android:layout_below="@+id/imgwelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/btnToSignIn"
                layout="@layout/btn_primary"
                android:layout_marginTop="45dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <include
                android:id="@+id/btnToSignUp"
                layout="@layout/btn_secondary"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>